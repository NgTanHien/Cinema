@model IEnumerable<Quanlyrapchieuphim.Models.NguoiDung>
@{

    Layout = null;
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-Ry7Eu6WvRkjwS67Sv5Xu5z/6jnDqKC2wujv6J+mRlSffXgQk1vzlh1wUEmV3vXN6+LlZpvLSjPvZflDpBoW78w==" crossorigin="anonymous" />

</head>
<style>

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Header */
    .login-container {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        background-color: #333;
        color: white;
        padding: 10px;
    }

        .login-container button {
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .login-container button:hover {
                background-color: white;
                color: black;
            }

            .login-container button a {
                color: white;
                text-decoration: none;
            }

                .login-container button a:hover {
                    color: black;
                    text-decoration: none;
                }

    .main_content {
        width: 80%;
        margin: 20px auto;
        margin-left:200px;
        align-items: center;
        font-size: 20px;    
    }

    

    ul {
        list-style: none;
        padding: 0;
        display: flex;
    }

        ul li {
            margin-right: 20px;
        }

            ul li a {
                text-decoration: none;
                color: black;
                transition: color 0.3s ease;
                font-weight:500;
            }

                ul li a:hover {
                    color: #0056b3;
                }

    .home {
        margin-right: auto;
    }

</style>

<script>
    // Sử dụng jQuery
        $(document).ready(function () {
            // Hiển thị thông tin tài khoản khi trang web được tải hoàn tất
            showAccountInfo();
    });

        function showAccountInfo() {
            document.getElementById('account-info').style.display = 'block';
        document.getElementById('transaction-history').style.display = 'none';
    }

        function showTransactionHistory() {
            document.getElementById('account-info').style.display = 'none';
        document.getElementById('transaction-history').style.display = 'block';
    }

</script>
<div class="login-container">
    <div class="home">
        <button><a href="@Url.Action("Index", "Home")">Trang chủ</a></button>
    </div>
    
    @if (Session["TaiKhoan"] == null)
    {
        <button><a href="@Url.Action("Index", "Login")">Đăng nhập</a></button>
        <button><a href="@Url.Action("Register", "Login")">Đăng Ký</a></button>

    }
    else
    {
        <button><a href="@Url.Action("delete", "Login")">Đăng xuất</a></button>
        <button>@Html.ActionLink("Tài khoản", "Index", "User")</button>
    }


</div>





<body>
    <div class="main_content">
        <div>
            
            <ul>
                <li><a onclick="showAccountInfo()">Thông tin tài khoản</a></li>
                <li><a onclick="showTransactionHistory()">Lịch sử giao dịch</a></li>
            </ul>

            <!-- Danh sách phim đang chiếu -->
            <ul id="account-info" style="display: none;">
                @Html.Action("TaiKhoan", "User")

            </ul>



            <!-- Danh sách phim sắp chiếu -->
            <ul id="transaction-history" style="display: none;">
                @Html.Action("Lichsugiaodich", "User")
            </ul>


        </div>

    </div>


</body>







