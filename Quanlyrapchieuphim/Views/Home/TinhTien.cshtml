@{
    ViewBag.Title = "TinhTien";
}

<h2>TÍNH TIỀN</h2>

@{
    var ghe = ViewData["Ghe"] as Quanlyrapchieuphim.Models.ChoNgoi__SuatChieu;
    var phim = ViewData["Phim"] as Quanlyrapchieuphim.Models.Phim;
    List<Quanlyrapchieuphim.Models.DichVu> selectedServices = ViewData["SelectedServices"] as List<Quanlyrapchieuphim.Models.DichVu>;
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Thông tin phim và ghế</title>
</head>
<body>
    <div class="form-container">
        <h3 class="thongtinphim">THÔNG TIN PHIM</h3>
        <h4>Hình ảnh:</h4>
        <div class="div-phim">
            <img src="~/Images/@phim.TenAnh" alt="Hình ảnh phim" style="width: 200px; height: auto;" />
            <h4>Tên phim: @phim.TenPhim</h4>
        </div>


        <h3>THÔNG TIN GHẾ</h3>
        <div>
            <h4>ID ghế: @ghe.IDChoNgoi </h4>
            <p>Giá tiền: 70000</p>
        </div>
        <h3>THÔNG TIN DỊCH VỤ</h3>
        <ul>
            @foreach (var service in selectedServices)
            {
                <li class="dichvu">

                    <strong>Tên dịch vụ:  @service.TenDichVu </strong>  <br />
                    <strong>Giá tiền: @service.GiaTien  </strong>  <br />

                </li>
            }
        </ul>
        <div>
            <h3 class="tongcong">Tổng cộng : @ViewBag.message VNĐ</h3>
        </div>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <a class="thanhtoan" href="/Home/PaymentWithPayPal">
            <i class="fab fa-paypal"></i>PayPal
        </a>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
       
    </div>
</body>
</html>
