@model IEnumerable<Quanlyrapchieuphim.Models.SuatChieu>
@{
    Layout = null;
}
<style>
    .lich-chieu {
        margin-top: 20px; /* Khoảng cách từ phần chi tiết phim đến lịch chiếu */
        font-weight:bold;
    }

        /* Định dạng cho bảng lịch chiếu */
        .lich-chieu table {
            width: 100%; /* Chiều rộng của bảng lịch chiếu */
            border-collapse: collapse; /* Xóa đường viền giữa các ô */
            background-color: #f9f9f9; /* Màu nền của bảng */
        }

        /* Định dạng cho ô tiêu đề của bảng lịch chiếu */
        .lich-chieu th {
            padding: 15px; /* Padding cho các ô */
            border: 1px solid #ddd; /* Định dạng đường viền của các ô */
            background-color: #f2f2f2; /* Màu nền của các ô tiêu đề */
            text-align: center; /* Căn giữa nội dung của ô tiêu đề */
            vertical-align: middle; /* Căn giữa theo chiều dọc */
            font-weight: bold; /* In đậm */
            font-size: 20px;
        }

        /* Định dạng cho các ô dữ liệu của bảng lịch chiếu */
        .lich-chieu td {
            padding: 10px; /* Padding cho các ô */
            border: 1px solid #ddd; /* Định dạng đường viền của các ô */
            text-align: center; /* Căn giữa nội dung của ô */
            vertical-align: middle; /* Căn giữa theo chiều dọc */
        }

            /* Loại bỏ đường viền bên trái của cột đầu tiên */
            .lich-chieu th:first-child,
            .lich-chieu td:first-child {
                border-left: none;
            }

            /* Loại bỏ đường viền bên phải của cột cuối cùng */
            .lich-chieu th:last-child,
            .lich-chieu td:last-child {
                border-right: none;
            }
        /* Định dạng cho nút "Đặt vé" */
        .lich-chieu .btn {
            background-color: #007bff; /* Màu nền của nút */
            color: #fff; /* Màu chữ của nút */
            border: none; /* Xóa viền của nút */
            padding: 10px 20px; /* Điều chỉnh kích thước của nút */
            border-radius: 5px; /* Bo tròn các góc của nút */
            cursor: pointer; /* Đổi con trỏ chuột thành hình bàn tay khi di chuột qua nút */
            transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển đổi màu nền và màu chữ khi hover */
        }

            /* Định dạng khi di chuột qua nút */
            .lich-chieu .btn:hover {
                background-color: #0056b3; /* Màu nền khi hover */
                color: #fff; /* Màu chữ khi hover */
            }

</style>

<div class="lich-chieu">
    <table>
        <thead>
            <tr>
                <th>Ngày chiếu</th>
                <th>Giờ chiếu</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NgayChieu</td>
                    <td>@item.ThoiGianChieu</td>
                    <td><a href="@Url.Action("ChoNgoi","Home", new {  id = item.IDSuatChieu })" class="btn btn-danger" role="button">Đặt vé</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>